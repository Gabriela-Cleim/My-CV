<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/nnback"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        >

        <ImageButton
            android:id="@+id/btnDoc"
            android:layout_width="62dp"
            android:layout_height="58dp"
            android:src="@drawable/doc"
            android:layout_marginEnd="5dp"
            android:scaleType="fitCenter"
            android:background="@color/back"/>

        <ImageButton
            android:id="@+id/btnbrowser"
            android:layout_width="62dp"
            android:layout_height="58dp"
            android:src="@drawable/browser"
            android:scaleType="fitCenter"
            android:background="@color/back"/>

        <ImageButton
            android:id="@+id/btnHelp"
            android:layout_width="62dp"
            android:layout_height="58dp"
            android:src="@drawable/help"
            android:scaleType="fitCenter"
            android:background="@color/back"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/linear1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp">

        <ImageButton
            android:id="@+id/language"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:src="@drawable/language2"
            android:scaleType="fitCenter"
            android:background="@color/back"/>

        <ImageButton
            android:id="@+id/java"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:src="@drawable/iconsjava"
            android:scaleType="fitCenter"
            android:background="@color/back"/>

        <ImageButton
            android:id="@+id/android"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:src="@drawable/iconandroid"
            android:scaleType="fitCenter"
            android:background="@color/back"/>

        <ImageButton
            android:id="@+id/javascript"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:src="@drawable/iconsjavascript"
            android:scaleType="fitCenter"
            android:background="@color/back"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linear2"
        app:layout_constraintTop_toBottomOf="@+id/linear1"
        android:layout_marginTop="60dp"
        >

        <ImageButton
            android:id="@+id/html"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:src="@drawable/iconshtml"
            android:scaleType="fitCenter"
            android:background="@color/back"/>

        <ImageButton
            android:id="@+id/css"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:src="@drawable/iconscss"
            android:scaleType="fitCenter"
            android:background="@color/back"/>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:00 PM"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="353dp"
        tools:layout_editor_absoluteY="717dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="9dp"/>


    <com.example.mycv.Typewriter
        android:id="@+id/type"
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="110dp"
        android:text="hi"
        android:paddingEnd="5dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>